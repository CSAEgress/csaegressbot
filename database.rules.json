{
  "rules": {
    ".write": false,

    "users": { ".read": false },
    "settings": { ".read": false },

    "$postid": {
      ".validate": "$postid.length == 32",
      ".read": "data.child('is_private').val() != true",
      
      "is_private": { ".validate": "newData.isBoolean()" },
      "owner": { ".validate": "newData.isString() && newData.val().length <= 20 && newData.val().length > 3" },
      "title": { ".validate": "newData.isString() && newData.val().length <= 60" },
      "description": {".validate": "newData.isString() && newData.val().length <= 500"},
      
      "$_": {".validate": false}
    }
  }
}
